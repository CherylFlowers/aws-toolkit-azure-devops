{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "gulp",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "build",
            "args": ["build"]
        },
        {
            "taskName": "clean",
            "args": ["clean"]
        },
        {
            "taskName": "test",
            "args": ["test"]
        },
        {
            "taskName": "package",
            "args": ["package"]
        }
    ],
    "problemMatcher": "$tsc"
}